{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "toolName": "Skill"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre_skill_tracker.py",
            "timeout": 1
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "toolName": "Skill"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/post_skill_tracker.py",
            "timeout": 3
          }
        ]
      }
    ]
  },
  "metadata": {
    "name": "pensieve",
    "version": "1.0.0",
    "description": "Universal skill tracking hooks for all plugins - stores skill execution memories"
  }
}
