{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "toolName": "Skill"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/test_skill_observability_proof.py",
            "timeout": 1
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "toolName": "Skill"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/skill_execution_logger.py",
            "timeout": 3
          }
        ]
      }
    ]
  },
  "notes": {
    "PreToolUse": "Captures start time, initializes invocation tracking before skill execution",
    "PostToolUse": "Calculates duration, logs execution result after skill completes",
    "continual_learning": "Enables per-iteration evaluation (not just batch aggregation)"
  }
}
