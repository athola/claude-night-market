{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "toolName": "Skill"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre_skill_execution.py",
            "timeout": 1
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "toolName": "Skill"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/skill_execution_logger.py",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
